{
   "compilerOptions": {
     "baseUrl": ".",
     "resolveJsonModule": true,
     "lib": ["es5", "es6", "dom", "es2016"],
     "target": "esnext",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": ".build",
     "rootDir": "./",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "esModuleInterop": true,
     "allowJs": true,
     "sourceMap": true,
     "skipLibCheck": true,
     "paths": {
       "@applications/*": ["./src/applications/*"],
       "@controllers/*": ["./src/main/controllers/*"],
       "@repositories/*": ["./src/applications/repositories/*"],
       "@enums/*": ["./src/applications/enums/*"],
       "@repository/*": ["src/main/repositories/*"],
       "@usecases/*": ["./src/applications/usecases/*"],
       "@schemas/*": ["./src/main/schemas/*"],
       "@config/*": ["./src/main/config/*"],
       "@utils/*": ["./src/main/config/utils/*"],
       "@stubs/*": ["./test/stubs/*"],
       "@test/*": ["./test/*"]
     }
   },
   "include": ["src"],
   "exclude": ["node_modules"]
 }
 